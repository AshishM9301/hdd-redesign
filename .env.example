# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your values
# This file is used by @t3-oss/env-nextjs for type-safe environment variable validation

# ============================================
# Authentication (Better Auth)
# ============================================

# Secret key for Better Auth (optional in development, required in production)
# Generate a random string: openssl rand -base64 32
BETTER_AUTH_SECRET=

# GitHub OAuth credentials
# Get these from: https://github.com/settings/developers
BETTER_AUTH_GITHUB_CLIENT_ID=
BETTER_AUTH_GITHUB_CLIENT_SECRET=

# ============================================
# Database
# ============================================

# PostgreSQL database connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# ============================================
# Application Environment
# ============================================

# Node environment: development, test, or production
NODE_ENV=development
# ============================================
# Resend Provider Configuration
# ============================================

RESEND_API_KEY=
RESEND_FROM=
ADMIN_NOTIFICATION_EMAIL=

# ============================================
# Storage Provider Configuration
# ============================================

# Storage provider: 'firebase' or 'aws'
# Default: firebase
STORAGE_PROVIDER=firebase

# ============================================
# Firebase Storage Configuration
# ============================================
# Required when STORAGE_PROVIDER is 'firebase' or in production

# Firebase project ID
# Find this in Firebase Console > Project Settings > General
FIREBASE_PROJECT_ID=

# Firebase storage bucket name
# Format: your-project-id.appspot.com
# Find this in Firebase Console > Storage
FIREBASE_STORAGE_BUCKET=

# Firebase service account key (JSON stringified)
# 1. Go to Firebase Console > Project Settings > Service Accounts
# 2. Click "Generate New Private Key"
# 3. Download the JSON file
# 4. Stringify the JSON content (remove newlines, escape quotes)
# Example: {"type":"service_account","project_id":"...","private_key":"..."}
FIREBASE_SERVICE_ACCOUNT_KEY=

# ============================================
# Railway S3 Storage Configuration
# ============================================
# Storage (default Railway S3-compatible)
# STORAGE_PROVIDER=railway
RAILWAY_S3_ENDPOINT=""
RAILWAY_S3_REGION=""
RAILWAY_S3_BUCKET=""
RAILWAY_S3_ACCESS_KEY_ID=""
RAILWAY_S3_SECRET_ACCESS_KEY=""

# ============================================
# AWS S3 Storage Configuration (Future/Optional)
# ============================================
# Required when STORAGE_PROVIDER is 'aws'

# AWS Access Key ID
# Get this from AWS IAM > Users > Security Credentials
AWS_ACCESS_KEY_ID=

# AWS Secret Access Key
# Get this when creating the access key (only shown once)
AWS_SECRET_ACCESS_KEY=

# AWS Region
# Example: us-east-1, us-west-2, eu-west-1
AWS_REGION=

# S3 Bucket Name
# Create a bucket in AWS S3 Console
AWS_S3_BUCKET_NAME=
